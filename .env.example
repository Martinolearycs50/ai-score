# Chrome UX Report API Key
# Get your free API key from: https://developers.google.com/web/tools/chrome-user-experience-report/api/guides/getting-started
# Free tier: 1,000 requests/day
# Replace with your own API key in production
CHROME_UX_API_KEY=your_api_key_here

# Cloudflare Worker URL (optional)
# Used for progressive enhancement and CORS bypass
NEXT_PUBLIC_WORKER_URL=

# Feature Flags
NEXT_PUBLIC_ENABLE_DYNAMIC_SCORING=true
NEXT_PUBLIC_ENABLE_PROGRESSIVE_ENHANCEMENT=true

# Pro Features (set to true to enable pro tier UI)
NEXT_PUBLIC_ENABLE_PRO_FEATURES=false

# Rate Limiting
RATE_LIMIT_PER_HOUR=50
RATE_LIMIT_WINDOW_MS=3600000

# Timeouts (in milliseconds)
TIMEOUT_PAGE_FETCH=30000
TIMEOUT_ROBOTS_TXT=5000
TIMEOUT_TTFB_CHECK=5000

# Cache Settings (in milliseconds)
CACHE_CHROME_UX_TTL=3600000
CACHE_ROBOTS_TXT_TTL=86400000

# Content Limits
MAX_CONTENT_LENGTH=100000
MAX_WORD_COUNT=50000